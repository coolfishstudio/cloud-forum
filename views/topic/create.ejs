<%- include ../header %>
<div class="tm-middle">
    <div class="uk-container uk-container-center uk-margin-top uk-margin-bottom">
    	<div class="uk-width-medium-5-6 uk-container-center">
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-large-3-4">
                    <div class="panel panel_border mb10">
                        <div class="uk-panel uk-panel-header pd5">
                            <div class="uk-panel-title pd10">
                                <div class="uk-form">
                                    <div class="uk-grid">
                                        <div class="uk-width-2-3 uk-form-icon">
                                            <i class="uk-icon-file-text-o"></i>
                                            <input type="text" placeholder="" class="uk-width-1-1">
                                        </div>
                                        <div class="uk-width-1-3 uk-form-icon">
                                            <select class="uk-width-1-1">
                                                <option>心情</option>
                                                <option>技术</option>
                                                <option>分享</option>
                                                <option>求助</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="topic_box">
                                <div class="topic_content mb10 uk-form">
                                    <div class="uk-form-row">
                                        <textarea class='editor' name='t_content' rows='20'
                          placeholder='文章支持 Markdown 语法, 请注意标记代码'
                        ></textarea>

                                    </div>

                                </div>
                                <div class="uk-clearfix">
                                    <div class="uk-float-right">
                                        <div class="uk-button-group">
                                            <a class="uk-button uk-button-success" href="###">发表</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="uk-width-large-1-4 uk-hidden-small">
                    <%- include ../goHome %>
                    <%- include ../userInfo %>
                    <%- include ../works %>
                    <%- include ../tool %>
                    <%- include ../friendship %>
                    <%- include ../ads %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ../footer %>
<link rel="stylesheet" href="/css/editor.css" />
<script type="text/javascript" src="/js/editor.js"></script>
<script type="text/javascript" src="/js/marked.js"></script>

<script type="text/javascript">
(function(){
    var editor = new Editor();
    editor.render($('.editor')[0]);
})();
</script>