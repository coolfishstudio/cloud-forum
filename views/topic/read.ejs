<%- include ../header %>
<div class="tm-middle">
    <div class="uk-container uk-container-center uk-margin-top uk-margin-bottom">
    	<div class="uk-width-medium-5-6 uk-container-center">
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-large-3-4">
                    <div class="panel panel_border mb10">
                        <div class="uk-panel uk-panel-header pd5">
                            <div class="uk-panel-title pd10">
                                <div class="topic_title"><%- topicInfo.title %></div>
                                <div class="topic_info">发布于 <%- topicInfo.lastTime == '刚刚发表' ? '刚刚' : topicInfo.lastTime %> - 作者 <%- topicInfo.userName %> - <%- topicInfo.visitQuantity%> 次浏览</div>
                                <div class="topic_icon">
                                    <a href="###" title="修改"><i class="uk-icon-pencil-square"></i></a>
                                    <a href="###" title="删除"><i class="uk-icon-bitbucket"></i></a>
                                    <a href="###" id="iGood_t" title="加精"><i class="uk-icon-star"></i></a>
                                    <a href="/topic/<%= topicInfo._id %>/good/0" id="iGood_f" title="取消加精"><i class="uk-icon-star-o"></i></a>
                                    <a href="/topic/<%= topicInfo._id %>/top/1" title="置顶"><i class="uk-icon-arrow-circle-up"></i></a>
                                    <a href="/topic/<%= topicInfo._id %>/top/0" title="取消置顶"><i class="uk-icon-arrow-circle-o-up"></i></a>
                                </div>
                            </div>
                            <div class="topic_box">
                                <div class="topic_content">
                                    <%- topicInfo.content %>
                                </div>
                                <div class="uk-clearfix">
                                    <div class="uk-float-right">
                                        <a class="uk-button uk-button-success <%- user=='' ? 'uk-hidden' : '' %> " href="###">收藏</a>
                                        <a class="uk-button uk-button-success" href="###">分享</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="panel panel_border mb10">
                        <div class="uk-panel uk-panel-header pd5">
                            <h3 class="uk-panel-title">回复</h3>
                            <ul class="uk-list uk-list-line">
                                <li>11111</li>
                                <li>1111</li>
                                <li>1111</li>
                            </ul>
                        </div>

                    </div>

                    <div class="panel panel_border mb10">
                        <div class="uk-panel uk-panel-header pd5">
                            <h3 class="uk-panel-title">发言</h3>
                            <div class="topic_content uk-form">
                                <div class="uk-form-row topic_speech">
                                    <textarea class='editor' name='t_content' rows='4'
                                    ></textarea>
                                </div>
                            </div>
                            <div class="uk-clearfix topic_box">
                                <div class="uk-float-right">
                                    <a href="###" class="uk-button uk-button-success uk-vertical-align-middle" id="createTopic"><i class="uk-icon-location-arrow"></i>&nbsp;我要发言</a>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="uk-width-large-1-4 uk-hidden-small">
                    <%- include ../goHome %>
                    <%- include ../works %>
                    <%- include ../tool %>
                    <%- include ../friendship %>
                    <%- include ../ads %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ../footer %>

<link rel="stylesheet" href="/css/editor.css" />
<script type="text/javascript" src="/js/editor.js"></script>
<script type="text/javascript" src="/js/marked.js"></script>
<script type="text/javascript">
(function(){
    var editor = new Editor();
    editor.render($('.editor')[0]);


})();
</script>